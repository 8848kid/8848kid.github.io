    <!-- Three.js åº“ -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <!-- OrbitControls ç”¨äºç›¸æœºæ§åˆ¶ -->
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/controls/OrbitControls.min.js"></script>

    <script>
        // å…¨å±€å˜é‡
        let scene, camera, renderer, controls;
        let particles, particleSystem;
        let handGesture = 0.5; // æ‰‹åŠ¿å¼€åˆç¨‹åº¦ (0: é—­åˆ, 1: å¼ å¼€)
        let isFireworksActive = false;
        let fireworksParticles = [];
        let fireworksTextVisible = false;
        let particleMode = 'flock'; // 'flock', 'random', 'spiral'
        
        // åˆå§‹åŒ–Three.jsåœºæ™¯
        function init() {
            // åˆ›å»ºåœºæ™¯
            scene = new THREE.Scene();
            scene.fog = new THREE.Fog(0x000022, 10, 100);
            
            // åˆ›å»ºç›¸æœº
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.z = 50;
            
            // åˆ›å»ºæ¸²æŸ“å™¨
            renderer = new THREE.WebGLRenderer({ 
                canvas: document.getElementById('particle-scene'),
                antialias: true,
                alpha: true
            });
            renderer.setSize(window.innerWidth - 320, window.innerHeight - 120);
            renderer.setPixelRatio(window.devicePixelRatio);
            
            // æ·»åŠ è½¨é“æ§åˆ¶
            controls = new THREE.OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;
            controls.dampingFactor = 0.05;
            
            // åˆ›å»ºç²’å­ç³»ç»Ÿ
            createParticleSystem(1200);
            
            // æ·»åŠ ç¯å¢ƒå…‰
            const ambientLight = new THREE.AmbientLight(0x333333);
            scene.add(ambientLight);
            
            // æ·»åŠ æ–¹å‘å…‰
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
            directionalLight.position.set(1, 1, 1);
            scene.add(directionalLight);
            
            // çª—å£å¤§å°è°ƒæ•´å¤„ç†
            window.addEventListener('resize', onWindowResize);
            
            // åˆå§‹åŒ–UIäº‹ä»¶
            initUIEvents();
            
            // å¼€å§‹åŠ¨ç”»å¾ªç¯
            animate();
        }
        
        // åˆ›å»ºç²’å­ç³»ç»Ÿ
        function createParticleSystem(count) {
            // å¦‚æœå·²å­˜åœ¨ç²’å­ç³»ç»Ÿï¼Œåˆ™ä»åœºæ™¯ä¸­ç§»é™¤
            if (particleSystem) {
                scene.remove(particleSystem);
                particleSystem.geometry.dispose();
                particleSystem.material.dispose();
            }
            
            // åˆ›å»ºç²’å­å‡ ä½•ä½“
            const geometry = new THREE.BufferGeometry();
            const positions = new Float32Array(count * 3);
            const colors = new Float32Array(count * 3);
            const sizes = new Float32Array(count);
            
            // åˆå§‹åŒ–ç²’å­ä½ç½®ã€é¢œè‰²å’Œå¤§å°
            for (let i = 0; i < count; i++) {
                // éšæœºä½ç½®
                positions[i * 3] = (Math.random() - 0.5) * 100;
                positions[i * 3 + 1] = (Math.random() - 0.5) * 100;
                positions[i * 3 + 2] = (Math.random() - 0.5) * 100;
                
                // éšæœºé¢œè‰²ï¼ˆåŸºäºé€‰æ‹©çš„é¢œè‰²ï¼‰
                const baseColor = new THREE.Color(document.getElementById('color-picker').value);
                const colorVariation = new THREE.Color(
                    Math.random() * 0.3 + 0.7,
                    Math.random() * 0.3 + 0.7,
                    Math.random() * 0.3 + 0.7
                );
                const finalColor = baseColor.clone().multiply(colorVariation);
                
                colors[i * 3] = finalColor.r;
                colors[i * 3 + 1] = finalColor.g;
                colors[i * 3 + 2] = finalColor.b;
                
                // éšæœºå¤§å°
                sizes[i] = Math.random() * 2 + 0.5;
            }
            
            geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
            geometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));
            geometry.setAttribute('size', new THREE.BufferAttribute(sizes, 1));
            
            // åˆ›å»ºç²’å­æè´¨
            const material = new THREE.PointsMaterial({
                size: document.getElementById('particle-size').value,
                vertexColors: true,
                transparent: true,
                opacity: 0.8,
                sizeAttenuation: true
            });
            
            // åˆ›å»ºç²’å­ç³»ç»Ÿ
            particleSystem = new THREE.Points(geometry, material);
            scene.add(particleSystem);
            
            // å­˜å‚¨ç²’å­åŸå§‹æ•°æ®ä»¥ä¾¿æ›´æ–°
            particles = {
                positions: positions,
                colors: colors,
                sizes: sizes,
                velocities: [],
                originalPositions: []
            };
            
            // åˆå§‹åŒ–ç²’å­é€Ÿåº¦
            for (let i = 0; i < count; i++) {
                particles.velocities.push(new THREE.Vector3(
                    (Math.random() - 0.5) * 0.1,
                    (Math.random() - 0.5) * 0.1,
                    (Math.random() - 0.5) * 0.1
                ));
                
                particles.originalPositions.push(new THREE.Vector3(
                    positions[i * 3],
                    positions[i * 3 + 1],
                    positions[i * 3 + 2]
                ));
            }
        }
        
        // æ›´æ–°ç²’å­ç³»ç»Ÿ
        function updateParticles() {
            const positions = particles.positions;
            const speed = parseFloat(document.getElementById('particle-speed').value);
            const time = Date.now() * 0.001;
            
            // æ ¹æ®æ‰‹åŠ¿è°ƒæ•´ç²’å­æ‰©æ•£
            const spreadFactor = 1 + handGesture * 3; // æ‰‹åŠ¿å¼ å¼€æ—¶ç²’å­æ›´åˆ†æ•£
            
            for (let i = 0; i < positions.length / 3; i++) {
                const idx = i * 3;
                const originalPos = particles.originalPositions[i];
                const velocity = particles.velocities[i];
                
                // æ ¹æ®å½“å‰æ¨¡å¼æ›´æ–°ç²’å­ä½ç½®
                let targetX = originalPos.x;
                let targetY = originalPos.y;
                let targetZ = originalPos.z;
                
                if (particleMode === 'random') {
                    // éšæœºæ¨¡å¼ï¼šç²’å­éšæœºç§»åŠ¨
                    targetX += Math.sin(time + i) * 20;
                    targetY += Math.cos(time * 0.7 + i) * 20;
                    targetZ += Math.sin(time * 0.5 + i) * 20;
                } else if (particleMode === 'spiral') {
                    // èºæ—‹æ¨¡å¼ï¼šç²’å­å‘ˆèºæ—‹è¿åŠ¨
                    const angle = time * 0.5 + i * 0.01;
                    const radius = 5 + i % 10;
                    targetX = Math.cos(angle) * radius;
                    targetY = Math.sin(angle) * radius;
                    targetZ = (i % 20) - 10;
                } else {
                    // ç¾¤ä½“æ¨¡å¼ï¼šç²’å­å›´ç»•ä¸­å¿ƒç‚¹è¿åŠ¨
                    const angle = time * 0.2 + i * 0.01;
                    const radius = 15 + Math.sin(time * 0.3 + i) * 5;
                    targetX = Math.cos(angle) * radius;
                    targetY = Math.sin(angle) * radius;
                    targetZ = Math.sin(time * 0.4 + i) * 10;
                }
                
                // åº”ç”¨æ‰‹åŠ¿æ‰©æ•£
                targetX *= spreadFactor;
                targetY *= spreadFactor;
                targetZ *= spreadFactor;
                
                // ç¼“æ…¢ç§»åŠ¨åˆ°ç›®æ ‡ä½ç½®
                positions[idx] += (targetX - positions[idx]) * 0.05 * speed;
                positions[idx + 1] += (targetY - positions[idx + 1]) * 0.05 * speed;
                positions[idx + 2] += (targetZ - positions[idx + 2]) * 0.05 * speed;
                
                // æ·»åŠ ä¸€äº›éšæœºè¿åŠ¨
                positions[idx] += velocity.x * speed;
                positions[idx + 1] += velocity.y * speed;
                positions[idx + 2] += velocity.z * speed;
                
                // è¾¹ç•Œæ£€æŸ¥ - ä½¿ç²’å­ä¿æŒåœ¨èŒƒå›´å†…
                const maxDistance = 60 * spreadFactor;
                const distance = Math.sqrt(
                    positions[idx] * positions[idx] + 
                    positions[idx + 1] * positions[idx + 1] + 
                    positions[idx + 2] * positions[idx + 2]
                );
                
                if (distance > maxDistance) {
                    positions[idx] *= 0.95;
                    positions[idx + 1] *= 0.95;
                    positions[idx + 2] *= 0.95;
                }
            }
            
            // æ›´æ–°å‡ ä½•ä½“å±æ€§
            particleSystem.geometry.attributes.position.needsUpdate = true;
        }
        
        // è§¦å‘çƒŸèŠ±æ•ˆæœ
        function triggerFireworks() {
            if (isFireworksActive) return;
            
            isFireworksActive = true;
            const fireworksDisplay = document.getElementById('fireworks-display');
            
            // æ˜¾ç¤º"è€ƒé©¾ç…§"æ–‡å­—
            fireworksDisplay.classList.add('visible');
            fireworksTextVisible = true;
            
            // åˆ›å»ºçˆ†ç‚¸ç²’å­
            createFireworksParticles();
            
            // 5ç§’åéšè—æ–‡å­—
            setTimeout(() => {
                fireworksDisplay.classList.remove('visible');
                fireworksTextVisible = false;
            }, 5000);
            
            // 10ç§’åé‡ç½®çƒŸèŠ±çŠ¶æ€
            setTimeout(() => {
                isFireworksActive = false;
                // ç§»é™¤çƒŸèŠ±ç²’å­
                fireworksParticles.forEach(particle => {
                    scene.remove(particle);
                });
                fireworksParticles = [];
            }, 10000);
        }
        
        // åˆ›å»ºçƒŸèŠ±ç²’å­
        function createFireworksParticles() {
            const particleCount = 500;
            const geometry = new THREE.BufferGeometry();
            const positions = new Float32Array(particleCount * 3);
            const colors = new Float32Array(particleCount * 3);
            const sizes = new Float32Array(particleCount);
            
            // çˆ†ç‚¸ä¸­å¿ƒç‚¹
            const centerX = (Math.random() - 0.5) * 50;
            const centerY = (Math.random() - 0.5) * 50;
            const centerZ = (Math.random() - 0.5) * 30;
            
            for (let i = 0; i < particleCount; i++) {
                // ä»ä¸­å¿ƒç‚¹å‘å¤–æ‰©æ•£
                const angle = Math.random() * Math.PI * 2;
                const phi = Math.random() * Math.PI;
                const speed = Math.random() * 5 + 2;
                
                positions[i * 3] = centerX;
                positions[i * 3 + 1] = centerY;
                positions[i * 3 + 2] = centerZ;
                
                // éšæœºé¢œè‰²ï¼ˆé²œè‰³çš„çƒŸèŠ±è‰²ï¼‰
                const hue = Math.random() * 360;
                const color = new THREE.Color(`hsl(${hue}, 100%, 50%)`);
                
                colors[i * 3] = color.r;
                colors[i * 3 + 1] = color.g;
                colors[i * 3 + 2] = color.b;
                
                sizes[i] = Math.random() * 3 + 1;
                
                // å­˜å‚¨é€Ÿåº¦å’Œæ–¹å‘
                const velocity = new THREE.Vector3(
                    Math.sin(phi) * Math.cos(angle) * speed,
                    Math.sin(phi) * Math.sin(angle) * speed,
                    Math.cos(phi) * speed
                );
                
                // åˆ›å»ºçƒŸèŠ±ç²’å­
                const particleGeometry = new THREE.SphereGeometry(sizes[i] * 0.1, 8, 8);
                const particleMaterial = new THREE.MeshBasicMaterial({ 
                    color: color,
                    transparent: true,
                    opacity: 0.8
                });
                
                const particle = new THREE.Mesh(particleGeometry, particleMaterial);
                particle.position.set(positions[i * 3], positions[i * 3 + 1], positions[i * 3 + 2]);
                particle.userData.velocity = velocity;
                particle.userData.life = 1.0; // ç”Ÿå‘½å‘¨æœŸ
                
                scene.add(particle);
                fireworksParticles.push(particle);
            }
        }
        
        // æ›´æ–°çƒŸèŠ±ç²’å­
        function updateFireworks() {
            if (!isFireworksActive) return;
            
            for (let i = fireworksParticles.length - 1; i >= 0; i--) {
                const particle = fireworksParticles[i];
                
                // æ›´æ–°ä½ç½®
                particle.position.x += particle.userData.velocity.x * 0.5;
                particle.position.y += particle.userData.velocity.y * 0.5;
                particle.position.z += particle.userData.velocity.z * 0.5;
                
                // åº”ç”¨é‡åŠ›
                particle.userData.velocity.y -= 0.05;
                
                // å‡å°‘ç”Ÿå‘½å‘¨æœŸ
                particle.userData.life -= 0.01;
                particle.material.opacity = particle.userData.life;
                
                // å¦‚æœç²’å­ç”Ÿå‘½å‘¨æœŸç»“æŸï¼Œä»åœºæ™¯ä¸­ç§»é™¤
                if (particle.userData.life <= 0) {
                    scene.remove(particle);
                    fireworksParticles.splice(i, 1);
                }
            }
        }
        
        // æ›´æ–°æ‰‹åŠ¿å¯è§†åŒ–
        function updateHandVisualization() {
            const handVisual = document.getElementById('hand-visual');
            const gestureText = document.getElementById('gesture-text');
            const gestureValue = document.getElementById('gesture-value');
            const cameraHandIcon = document.getElementById('camera-hand-icon');
            
            // æ ¹æ®æ‰‹åŠ¿å€¼æ›´æ–°æ˜¾ç¤º
            if (handGesture < 0.3) {
                handVisual.textContent = "âœŠ";
                gestureText.textContent = "åŒæ‰‹é—­åˆ - ç²’å­èšé›†";
                gestureValue.textContent = "é—­åˆ";
                cameraHandIcon.className = "fas fa-fist-raised";
            } else if (handGesture < 0.7) {
                handVisual.textContent = "âœ‹";
                gestureText.textContent = "å•æ‰‹å¼ å¼€ - ç²’å­ä¸­ç­‰æ‰©æ•£";
                gestureValue.textContent = "åŠå¼€";
                cameraHandIcon.className = "fas fa-hand-paper";
            } else {
                handVisual.textContent = "ğŸ‘";
                gestureText.textContent = "åŒæ‰‹å¼ å¼€ - ç²’å­æ‰©æ•£";
                gestureValue.textContent = "å¼ å¼€";
                cameraHandIcon.className = "fas fa-hand-peace";
            }
            
            // æ·»åŠ åŠ¨ç”»æ•ˆæœ
            const scale = 1 + handGesture * 0.3;
            handVisual.style.transform = `translate(-50%, -50%) scale(${scale})`;
        }
        
        // æ›´æ–°ç²’å­é¢œè‰²
        function updateParticleColors() {
            const colorPicker = document.getElementById('color-picker');
            const colorValue = document.getElementById('color-value');
            const colors = particles.colors;
            
            // æ›´æ–°æ˜¾ç¤ºçš„é¢œè‰²å€¼
            colorValue.textContent = colorPicker.value;
            
            // æ›´æ–°ç²’å­é¢œè‰²
            const baseColor = new THREE.Color(colorPicker.value);
            
            for (let i = 0; i < colors.length / 3; i++) {
                const idx = i * 3;
                const colorVariation = new THREE.Color(
                    Math.random() * 0.3 + 0.7,
                    Math.random() * 0.3 + 0.7,
                    Math.random() * 0.3 + 0.7
                );
                const finalColor = baseColor.clone().multiply(colorVariation);
                
                colors[idx] = finalColor.r;
                colors[idx + 1] = finalColor.g;
                colors[idx + 2] = finalColor.b;
            }
            
            particleSystem.geometry.attributes.color.needsUpdate = true;
        }
        
        // åˆå§‹åŒ–UIäº‹ä»¶
        function initUIEvents() {
            // ç²’å­æ•°é‡æ§åˆ¶
            const particleCountSlider = document.getElementById('particle-count');
            const countValue = document.getElementById('count-value');
            
            particleCountSlider.addEventListener('input', function() {
                countValue.textContent = this.value;
                createParticleSystem(parseInt(this.value));
            });
            
            // ç²’å­å¤§å°æ§åˆ¶
            const particleSizeSlider = document.getElementById('particle-size');
            const sizeValue = document.getElementById('size-value');
            
            particleSizeSlider.addEventListener('input', function() {
                sizeValue.textContent = this.value;
                particleSystem.material.size = parseFloat(this.value);
            });
            
            // ç²’å­é€Ÿåº¦æ§åˆ¶
            const particleSpeedSlider = document.getElementById('particle-speed');
            const speedValue = document.getElementById('speed-value');
            
            particleSpeedSlider.addEventListener('input', function() {
                speedValue.textContent = this.value;
            });
            
            // æ‰‹åŠ¿æ¨¡æ‹Ÿæ§åˆ¶
            const gestureSlider = document.getElementById('gesture-slider');
            
            // æ·»åŠ æ‰‹åŠ¿æ¨¡æ‹Ÿæ»‘å—ï¼ˆå¦‚æœä¸å­˜åœ¨åˆ™åˆ›å»ºï¼‰
            if (!gestureSlider) {
                const gestureControlGroup = document.createElement('div');
                gestureControlGroup.className = 'control-group';
                gestureControlGroup.innerHTML = `
                    <label for="gesture-slider">æ‰‹åŠ¿å¼€åˆæ¨¡æ‹Ÿ</label>
                    <div class="slider-container">
                        <input type="range" id="gesture-slider" min="0" max="1" value="0.5" step="0.01">
                        <div class="value-display" id="gesture-slider-value">0.5</div>
                    </div>
                `;
                
                document.querySelector('.control-panel .control-section:first-child').appendChild(gestureControlGroup);
                
                // æ·»åŠ æ‰‹åŠ¿æ»‘å—äº‹ä»¶
                const newGestureSlider = document.getElementById('gesture-slider');
                const gestureSliderValue = document.getElementById('gesture-slider-value');
                
                newGestureSlider.addEventListener('input', function() {
                    handGesture = parseFloat(this.value);
                    gestureSliderValue.textContent = parseFloat(this.value).toFixed(2);
                    updateHandVisualization();
                });
            }
            
            // é¢œè‰²é€‰æ‹©å™¨
            const colorPicker = document.getElementById('color-picker');
            colorPicker.addEventListener('input', updateParticleColors);
            
            // ç²’å­æ¨¡å¼æŒ‰é’®
            document.getElementById('mode-flock').addEventListener('click', function() {
                setActiveModeButton('mode-flock');
                particleMode = 'flock';
            });
            
            document.getElementById('mode-random').addEventListener('click', function() {
                setActiveModeButton('mode-random');
                particleMode = 'random';
            });
            
            document.getElementById('mode-spiral').addEventListener('click', function() {
                setActiveModeButton('mode-spiral');
                particleMode = 'spiral';
            });
            
            // çƒŸèŠ±æŒ‰é’®
            document.getElementById('fireworks-btn').addEventListener('click', triggerFireworks);
            
            document.getElementById('text-effect-btn').addEventListener('click', function() {
                const fireworksDisplay = document.getElementById('fireworks-display');
                if (fireworksTextVisible) {
                    fireworksDisplay.classList.remove('visible');
                    fireworksTextVisible = false;
                } else {
                    fireworksDisplay.classList.add('visible');
                    fireworksTextVisible = true;
                    
                    // 10ç§’åè‡ªåŠ¨éšè—
                    setTimeout(() => {
                        fireworksDisplay.classList.remove('visible');
                        fireworksTextVisible = false;
                    }, 10000);
                }
            });
            
            // å…¨å±æŒ‰é’®
            document.getElementById('fullscreen-btn').addEventListener('click', toggleFullscreen);
            
            // éšæœºæ‰‹åŠ¿æ¨¡æ‹Ÿï¼ˆæ¨¡æ‹Ÿæ‘„åƒå¤´æ£€æµ‹ï¼‰
            setInterval(() => {
                // éšæœºå˜åŒ–æ‰‹åŠ¿ï¼Œæ¨¡æ‹Ÿæ‘„åƒå¤´æ£€æµ‹æ•ˆæœ
                const randomChange = (Math.random() - 0.5) * 0.1;
                handGesture = Math.max(0, Math.min(1, handGesture + randomChange));
                
                // æ›´æ–°æ‰‹åŠ¿æ»‘å—å’Œæ˜¾ç¤º
                const gestureSlider = document.getElementById('gesture-slider');
                if (gestureSlider) {
                    gestureSlider.value = handGesture;
                    document.getElementById('gesture-slider-value').textContent = handGesture.toFixed(2);
                }
                
                updateHandVisualization();
            }, 3000);
        }
        
        // è®¾ç½®æ´»åŠ¨æ¨¡å¼æŒ‰é’®
        function setActiveModeButton(activeId) {
            // ç§»é™¤æ‰€æœ‰æ¨¡å¼æŒ‰é’®çš„activeç±»
            document.querySelectorAll('.button-group button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // ä¸ºå½“å‰æ´»åŠ¨æŒ‰é’®æ·»åŠ activeç±»
            document.getElementById(activeId).classList.add('active');
        }
        
        // åˆ‡æ¢å…¨å±
        function toggleFullscreen() {
            const fullscreenBtn = document.getElementById('fullscreen-btn');
            const icon = fullscreenBtn.querySelector('i');
            
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    console.error(`å…¨å±è¯·æ±‚é”™è¯¯: ${err.message}`);
                });
                icon.className = "fas fa-compress";
            } else {
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                    icon.className = "fas fa-expand";
                }
            }
        }
        
        // çª—å£å¤§å°è°ƒæ•´å¤„ç†
        function onWindowResize() {
            camera.aspect = (window.innerWidth - 320) / (window.innerHeight - 120);
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth - 320, window.innerHeight - 120);
        }
        
        // åŠ¨ç”»å¾ªç¯
        function animate() {
            requestAnimationFrame(animate);
            
            // æ›´æ–°ç²’å­
            updateParticles();
            
            // æ›´æ–°çƒŸèŠ±
            updateFireworks();
            
            // æ›´æ–°è½¨é“æ§åˆ¶
            controls.update();
            
            // æ¸²æŸ“åœºæ™¯
            renderer.render(scene, camera);
        }
        
        // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
